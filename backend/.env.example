# MongoDB Connection
MONGODB_URI=mongodb+srv://<user>:<password>@<cluster-url>/<db>?retryWrites=true&w=majority

# JWT Secret (generate a random string)
JWT_SECRET=<your_random_secret>

# Email Configuration (choose either service or host settings)
# For Outlook (Office 365)
EMAIL_SERVICE=
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_SECURE=false
EMAIL_USER=<your_outlook_account@mbu.asia>
EMAIL_PASS=<your_password_or_app_password>

# Frontend URL
CLIENT_URL=http://localhost:3000

# Server Port
PORT=5000

# Microsoft SSO
MS_TENANT_ID=<tenant_guid>
MS_CLIENT_ID=<app_client_id>
